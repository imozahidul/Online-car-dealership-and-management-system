  <!-- display cars from database -->

  <div class="bg-dark">
    
    <div class="container">
      <hr class="mt-5" style="color: white;">
        <!-- show cars -->
        <section class="cardfront ">
          
          <div class="container  cardfront ">
    
            <h3 class="my-5 text-warning">Explore Cars</h3>
    
            <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center ">
              
              <% for(var i = 0; i < users.length; i++) { %>
                <div class="col text-white ">
                  <div class="card h-100 ">
                    <img  src="/img/cars/<%= users[i].image %>" class="card-img-top" alt="...">
                    <div class="card-body bg-dark border-shadow-card">
                      <h5 class="card-title text-white text-center"> <%= users[i].brand %></h5>
                      <hr>
                      <div class="row">
                        <div class="col  text-warning">
                          <p>Model: <%= users[i].model %></p>
                          <p>Color: <%= users[i].color %></p>
                          
                        </div>
                        <div class="col  text-warning">
                          <p>Type: <%= users[i].type %></p>
                          <p>Status: <%= users[i].status %></p>
                        </div>
                        
                      </div>
                      <hr>
                      <strong><p class="text-center">$ <%= users[i].price %></p></strong>
                    </div>
                  </div>
                </div>
                <% } %>
    
            </div>
    
          </div>
    
        </section>
    
      </div>
  </div>

